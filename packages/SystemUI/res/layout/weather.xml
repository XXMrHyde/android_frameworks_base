<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.policy.Weather
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/weather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/weather_bar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.StatusBar.Expanded.Network"
        android:textSize="14.0sp"
        android:background="@drawable/ic_notify_button_bg"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/weather_panel_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="22.0sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/button_refresh"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:background="@drawable/ic_notify_button_bg"
                android:src="@drawable/ic_weather_refresh" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="?android:attr/dividerHorizontal" />

            <ImageView
                android:id="@+id/button_collapse"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:background="@drawable/ic_notify_button_bg"
                android:src="@drawable/ic_weather_up" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="?android:attr/dividerHorizontal" />

            <ImageView
                android:id="@+id/button_settings"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:background="@drawable/ic_notify_button_bg"
                android:src="@drawable/ic_weather_settings" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/weather_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="fitXY"
        android:src="?android:attr/dividerHorizontal" />

    <LinearLayout
        android:id="@+id/weather_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:id="@+id/weather_panel_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/ic_notify_button_bg">

            <TextView
                android:id="@+id/current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/high_low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="10.0sp" />

            <TextView
                android:id="@+id/condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="14.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:src="?android:attr/dividerHorizontal" />

        <LinearLayout
            android:id="@+id/layout_condition_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal" 
            android:background="@drawable/ic_notify_button_bg">

            <ImageView
                android:id="@+id/condition_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:src="@drawable/weather_condition" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:src="?android:attr/dividerHorizontal" />

        <LinearLayout
            android:id="@+id/weather_panel_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/ic_notify_button_bg">

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/winds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>
</com.android.systemui.statusbar.policy.Weather>
