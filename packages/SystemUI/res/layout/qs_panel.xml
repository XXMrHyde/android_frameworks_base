<com.android.systemui.qs.QSContainer
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/quick_settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/qs_container_padding_top">

    <HorizontalScrollView
            android:id="@+id/quick_access_bar_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qab_button_size"
            android:paddingLeft="@dimen/qs_container_content_padding_left_right"
            android:paddingRight="@dimen/qs_container_content_padding_left_right"
            android:fadingEdgeLength="24dp"
            android:requiresFadingEdge="horizontal"
            android:scrollbars="none"
            android:fillViewport="true"
            android:background="@drawable/qs_background_primary"
            android:elevation="2dp">

        <LinearLayout
            android:id="@+id/quick_access_bar_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.android.systemui.darkkat.QuickAccess.QuickAccessBar
                    android:id="@+id/quick_access_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </HorizontalScrollView>

    <com.android.systemui.qs.QSPanel
            android:id="@+id/quick_settings_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qs_container_content_margin_top"
            android:background="@drawable/qs_background_primary"
            android:elevation="2dp" />

    <com.android.systemui.darkkat.weather.WeatherBarContainer
            android:id="@+id/status_bar_expanded_weather_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qs_container_content_margin_top"
            android:paddingLeft="@dimen/qs_container_content_padding_left_right"
            android:paddingRight="@dimen/qs_container_content_padding_left_right"
            android:background="@drawable/qs_background_primary"
            android:elevation="2dp">

        <TextView
                android:id="@+id/weather_bar_no_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/weather_info_not_available"
                android:textSize="16sp"
                android:textColor="#ffffffff" />

        <LinearLayout
                android:id="@+id/status_bar_expanded_weather_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/weather_bar_padding_top_bottom"
                android:paddingBottom="@dimen/weather_bar_padding_top_bottom"
                android:gravity="center_vertical" />

    </com.android.systemui.darkkat.weather.WeatherBarContainer>
</com.android.systemui.qs.QSContainer>
