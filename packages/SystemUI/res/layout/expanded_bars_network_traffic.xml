<com.android.systemui.darkkat.statusBarExpanded.bars.BarNetworkTraffic
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/expanded_bars_network_traffic_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/bars_network_traffic_up_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/bars_network_traffic_icon_padding_top"
            android:paddingRight="@dimen/bars_network_traffic_icon_text_padding_right"
            android:src="@drawable/ic_bars_network_traffic_up"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/bars_network_traffic_up_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/bars_network_traffic_icon_text_padding_right"
            android:text="@string/network_traffic_no_traffic"
            android:textSize="@dimen/expanded_bars_primary_text_size"
            android:textColor="?android:attr/textColorPrimary"
            android:singleLine="true" />

        <TextView
            android:id="@+id/bars_network_traffic_up_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_traffic_unit_bits_per_second"
            android:textSize="@dimen/expanded_bars_secondary_text_size"
            android:textColor="?android:attr/textColorSecondary"
            android:singleLine="true" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/bars_network_traffic_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/bars_network_traffic_icon_padding_top"
            android:paddingRight="@dimen/bars_network_traffic_icon_text_padding_right"
            android:src="@drawable/ic_bars_network_traffic_down"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/bars_network_traffic_down_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/bars_network_traffic_icon_text_padding_right"
            android:text="@string/network_traffic_no_traffic"
            android:textSize="@dimen/expanded_bars_primary_text_size"
            android:textColor="?android:attr/textColorPrimary"
            android:singleLine="true" />

        <TextView
            android:id="@+id/bars_network_traffic_down_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_traffic_unit_bits_per_second"
            android:textSize="@dimen/expanded_bars_secondary_text_size"
            android:textColor="?android:attr/textColorSecondary"
            android:singleLine="true" />

</com.android.systemui.darkkat.statusBarExpanded.bars.BarNetworkTraffic>
