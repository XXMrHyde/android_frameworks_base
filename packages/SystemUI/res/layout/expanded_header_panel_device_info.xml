<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expanded_panel_device_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/expanded_panel_mobile_signal_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/expanded_panel_wifi_signal_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/expanded_panel_mobile_signal_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerInside" />

    <FrameLayout
        android:id="@+id/expanded_panel_battery_layout"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/expanded_panel_wifi_signal_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

        <com.android.systemui.BatteryMeterView
            android:id="@+id/expanded_panel_battery_icon"
            android:layout_width="9.5dp"
            android:layout_height="14.5dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/mobile_network_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/mobile_network_carrier_text_view"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:textAlignment="center"
            android:importantForAccessibility="noHideDescendants" />

        <TextView
            android:id="@+id/mobile_network_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:textAlignment="center"
            android:importantForAccessibility="noHideDescendants" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wifi_network_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_below="@id/mobile_network_text_layout"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wifi_network_wifi_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:textAlignment="center"
            android:importantForAccessibility="noHideDescendants" />

        <TextView
            android:id="@+id/wifi_network_wifi_link_speed_text_view"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:textAlignment="center"
            android:importantForAccessibility="noHideDescendants" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_below="@id/wifi_network_text_layout"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/battery_percentage_text_view"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:textAlignment="center"
            android:importantForAccessibility="noHideDescendants" />

        <TextView
            android:id="@+id/battery_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:textAlignment="center"
            android:importantForAccessibility="noHideDescendants" />

    </LinearLayout>

    <com.android.systemui.statusbar.policy.StatusBarHeaderTraffic
        android:id="@+id/expanded_panel_traffic_layout"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_toEndOf="@id/mobile_network_text_layout"
        android:layout_alignTop="@id/mobile_network_text_layout"
        android:layout_toStartOf="@id/expanded_panel_mobile_signal_icon"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:gravity="center_vertical">

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/expanded_panel_traffic_up_icon"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignTop="@+id/expanded_panel_traffic_up_value_text"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/ic_expanded_header_traffic_up" />

        <TextView
            android:id="@id/expanded_panel_traffic_up_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:singleLine="true" />

        <TextView
            android:id="@+id/expanded_panel_traffic_up_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/expanded_panel_traffic_up_value_text"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:singleLine="true" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/expanded_panel_traffic_down_icon"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignTop="@+id/expanded_panel_traffic_down_value_text"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/ic_expanded_header_traffic_down" />

        <TextView
            android:id="@id/expanded_panel_traffic_down_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_expanded_panel_text_size"
            android:singleLine="true" />

        <TextView
            android:id="@+id/expanded_panel_traffic_down_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/expanded_panel_traffic_down_value_text"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:singleLine="true" />

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </com.android.systemui.statusbar.policy.StatusBarHeaderTraffic>

<!--        <ImageView
            android:id="@+id/expanded_panel_mobile_activity_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <ImageView
            android:id="@+id/expanded_panel_wifi_activity_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/> -->
</RelativeLayout>
